@model IEnumerable<ProductViewModels>
    <link rel="stylesheet" href="~/css/Lobby-Admin.css">
    <link rel="icon" type="imge/png" href="~/img/Fox_Read1.png">
    <title>Admin ReadFox</title>
 <body>
@if (User.Identity.IsAuthenticated)
{
    <!-- Main -->
    <div class="main">
      <div class="topbar">
          <div class="toggle">
            <ion-icon name="menu-outline"></ion-icon>
          </div>
          <!-- Search-->
          <div class="search">
              <label for="">
                  <input type="text" placeholder="Search Here">
                  <ion-icon name="search-outline"></ion-icon>
              </label>
          </div>
          <div class="user">
              <img src="~/img/Admin.png">
          </div>
      </div>
      <!-- Card-->
      <div class="cardBox">
          <div class="card">
              <div>
                            <div class="numbers">@Model.Count() </div>
                  <div class="cardName">Book</div>
              </div>
              <div class="iconBx">
                <ion-icon name="book-outline"></ion-icon>
              </div>
          </div>
          <div class="card">
            <div>
                <div class="numbers">11</div>
                <div class="cardName">User</div>
             </div>
             <div class="iconBx">
               <ion-icon name="person-outline"></ion-icon>
              </div>
            </div>
            <div class="card">
               <div>
                <div class="numbers">0</div>
                <div class="cardName">Sales</div>
              </div>
              <div class="iconBx">
                <ion-icon name="cart-outline"></ion-icon>
              </div>
            </div>
     </div>
     
     <div class="details">
         <!--detail list book-->
         <div class="recentBook">
             <div class="cardHeader">
                 <h2>Inventory</h2>
                 <a href="" class="btn">View All</a>
             </div>
             <table>
                 <thead>
                     <tr>
                         <td>ชื่อเรื่อง</td>
                         <td>ผู้แต่ง</td>
                         <td>ประเภท</td>
                         <td>ปรเภทเนื้อเรื่อง</td>
                         <td>ราคา</td>
                         <td>แก้ไข/ลบ</td>
                     </tr>
                 </thead>
                 <tbody>
                    @foreach(var item in Model)
                       {
                          <tr>
                              <td><a asp-controller="Product" asp-action="Detail"asp-route-name = "@item.ProductName" >@item.ProductName</a> </td>
                              <td>@item.Author</td>
                              <td>@item.CategoryName</td>
                              <td>@item.TypestoryName</td>
                              <td>@item.Price</td>
                              <td><a asp-controller="Product" asp-action="Edit" asp-route-id ="@item.Id" class="edit_btn">แก้ไข</a>  /<form asp-controller="Product" asp-action="Delete" asp-route-id="@item.Id" > 
                                  <button  type="submit"  class="delete_btn" onclick="return confirm('คุณต้องการทำการลบหนังสือเล่นนี้ : @item.ProductName ใช่หรือไม่')" >
                                      ลบ
                                      </button>
                                  </form></td> 
                          </tr>
                       }
                 </tbody>
             </table>
         </div>
     </div>
    </div>



 <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
 <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
 <script src="~/js/Dashboard-func.js"></script>


}
 </body>


   
  
   
