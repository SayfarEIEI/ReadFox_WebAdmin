@model ProductEditViewModels

<link rel="stylesheet" href="~/css/Lobby-Admin.css"/>
<link rel="stylesheet" href="~/css/Add.css"/>
<link rel="icon" type="imge/png" href="~/img/Fox_Read1.png">
    <title>AddBook ReadFox</title>
 
    <!-- Main -->
    <div class="main">
      <div class="topbar">
          <div class="toggle">
            <ion-icon name="menu-outline"></ion-icon>
          </div>
          <!-- Search-->
          <div class="search">
              <label for="">
                  <input type="text" placeholder="Search Here">
                  <ion-icon name="search-outline"></ion-icon>
              </label>
          </div>
          <div class="user">
              <img src="~/img/Admin.png">
          </div>
      </div>
      <!-- Card-->
      <div class="cardBox">
          <div class="card">
              <div>
                  <div class="numbers">25</div>
                  <div class="cardName">Book</div>
              </div>
              <div class="iconBx">
                <ion-icon name="book-outline"></ion-icon>
              </div>
          </div>
          <div class="card">
            <div>
                <div class="numbers">11</div>
                <div class="cardName">User</div>
             </div>
             <div class="iconBx">
               <ion-icon name="person-outline"></ion-icon>
              </div>
            </div>
            <div class="card">
               <div>
                <div class="numbers">0</div>
                <div class="cardName">Sales</div>
              </div>
              <div class="iconBx">
                <ion-icon name="cart-outline"></ion-icon>
              </div>
            </div>
     </div>
     
     <div class="details-add">
         <!--detail add book-->
         <div class="recentBook">
             <div class="cardHeader">
                 <h2>Edit Book</h2>
             </div>
             <form  asp-action="Edit"  >
                 <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
              <div class="data"> 
                <label asp-for="ProductName" >Title</label>
                <input asp-for="ProductName" type="text" placeholder="Title..." required>
            </div>
             <div class="data">
                <label asp-for="Author" >Author</label>
                <input asp-for="Author"  type="text" placeholder="Author..." required>
            </div>
           
            <div class="data">
                <label asp-for="CategoryId" class="control-label" >Category</label>
                <select asp-for="CategoryId" class="form-control" style='color:gray' oninput='style.color="black"' asp-items="ViewBag.CategoryLists">  </select>
            </div>
            <div class="data"> 
                <label asp-for="TypestoryId" >Type story</label>
                <select asp-for="TypestoryId" id="typestory" style='color:gray' oninput='style.color="black"' asp-items="ViewBag.StoryLists" >

                </select>
            </div>
            <div class="data">
                <label asp-for="Price" >Price</label>
                <input asp-for="Price" type="text"  placeholder="Price..."required>
            </div>
            
                <div class="btn-book">
                    <div class="inner"></div>
                    <button type="submit">submit</button>
                </div>
                </form>
         </div>
     </div>
    </div>



 <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
 <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
 <script src="~/js/Dashboard-func.js"></script>
