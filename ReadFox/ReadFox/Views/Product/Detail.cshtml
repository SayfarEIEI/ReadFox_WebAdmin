@model ProductViewModels
 <link rel="stylesheet" href="~/css/Lobby-Admin.css">
    <link rel="icon" type="imge/png" href="~/img/Fox_Read1.png">
    <title>Admin ReadFox</title>
   <body>
        <!-- Main -->
    <div class="main">
      <div class="topbar">
          <div class="toggle">
            <ion-icon name="menu-outline"></ion-icon>
          </div>
          <!-- Search-->
          <div class="search">
              <label for="">
                  <input type="text" placeholder="Search Here">
                  <ion-icon name="search-outline"></ion-icon>
              </label>
          </div>
          <div class="user">
              <img src="~/img/Admin.png">
          </div>
      </div>
      <!-- Card-->
      <div class="cardBox">
          <div class="card">
              <div>
                            <div class="numbers">25 </div>
                  <div class="cardName">Book</div>
              </div>
              <div class="iconBx">
                <ion-icon name="book-outline"></ion-icon>
              </div>
          </div>
          <div class="card">
            <div>
                <div class="numbers">11</div>
                <div class="cardName">User</div>
             </div>
             <div class="iconBx">
               <ion-icon name="person-outline"></ion-icon>
              </div>
            </div>
            <div class="card">
               <div>
                <div class="numbers">0</div>
                <div class="cardName">Sales</div>
              </div>
              <div class="iconBx">
                <ion-icon name="cart-outline"></ion-icon>
              </div>
            </div>
     </div>
     
     <div class="details">
         <!--detail list book-->
         <div class="recentBook">
                ชื่อหนังสือ : @Model.ProductName<br />
         <img src="~/image/@Model.ImageName" />
          ผู้แต่ง : @Model.Author<br />
         ประเภทหนัง : @Model.CategoryName<br />
         ประเภทเนื้อเรื่อง : @Model.TypestoryName<br />
         ราคา : @Model.Price<br />
            
         </div>
     </div>
    </div>



 <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
 <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
 <script src="~/js/Dashboard-func.js"></script>
       </body>